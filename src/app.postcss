/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer components {
	.input {
		@apply border px-5 py-2 w-full rounded-lg my-4 outline-none bg-transparent focus:ring-2 focus:ring-gray-200;
	}
	.microbox {
		@apply inline-block bg-primary-dark dark:bg-primary m-2 px-2 py-1 rounded-lg;
	}
}
